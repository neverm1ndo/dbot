doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        meta(http-equiv="Content-Security-Policy" content="default-src *; img-src * 'self' data: https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' *; style-src  'self' 'unsafe-inline' *")
        if session.passport
          title=session.passport.user.data[0].login + ' dashboard'
        else
          title="neverm1nd_o apps"
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        link(rel="shortcut icon" href="/tank2.png")
        link(href="/stylesheets/dashboard.css" rel="stylesheet")
    body
      if session.passport
        div.container
          div.d-flex.flex-row.justify-content-between.align-content-start.mt-4
            div.d-flex.flex-row.justify-content-between
              img.logo(src="/tank2.png")
            div
              p=session.passport.user.data[0].login
          div.alert(role="alert")
          div.col-4#avt-msg-form
            
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous")
        script(src="/scripts/dashboard.js")
